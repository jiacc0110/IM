<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/icon_right"
        android:padding="@dimen/icon_padding"
        android:layout_marginLeft="@dimen/chat_margin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/headimg"/>
    <TextView
        android:id="@+id/tv_chatcontent"
        android:layout_marginRight="@dimen/chat_margin"
        android:layout_marginTop="@dimen/chat_margin"
        android:textColor="#555555"
        android:layout_alignTop="@+id/icon_right"
        android:layout_toLeftOf="@+id/icon_right"
        android:layout_width="wrap_content"
        android:background="@drawable/chat_qipao_r"
        android:layout_height="wrap_content" />
</RelativeLayout>